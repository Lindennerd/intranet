<div class="row">
    <div class="col s6">
        <form action="/profile/profile-image-update" method="POST" class="card" encType="multipart/form-data">
            <div class="card-content">
                <div class="card-title">Atualizar imagem de perfil</div>
                <div class="file-field input-field">
                    <div class="btn">
                        <span>Procurar</span>
                        <input type="file" name="profile" accept=".jpg,.png,.gif" />
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
            </div>
            <div class="card-action">
                <button class="btn waves-effect waves-light" type="submit">Atualizar
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>

    <div class="col s6">
        <form action="/profile/background-update" method="POST" class="card" encType="multipart/form-data">
            <div class="card-content">
                <div class="card-title">Atualizar imagem de fundo</div>
                <div class="file-field input-field">
                    <div class="btn">
                        <span>Procurar</span>
                        <input type="file" name="background" accept=".jpg,.png,.gif">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
            </div>
            <div class="card-action">
                <button class="btn waves-effect waves-light" type="submit">Atualizar
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>

    <div class="col s12">
        <form action="/profile/update-information" method="POST" class="card" >
            <div class="card-content row">
                <div class="input-field col s12 m6">
                    <input type="text" name="name" value="{{user.name}}">
                    <label for="name">Nome</label>
                </div>
                <div class="input-field col s12 m6">
                    <input type="email" name="email" value="{{user.email}}">
                    <label for="email">Email</label>
                </div>
                <div class="divider"></div>
                <div class="card-title">Alterar Senha</div>
                <div class="input-field col s12 m6">
                    <input type="password" name="password">
                    <label for="password">Senha</label>
                </div>
                <div class="input-field col s12 m6">
                    <input type="password" name="password-confirmation">
                    <label for="password-confirmation">Confirmação de Senha</label>
                    <span id="helper-text" class="helper-text" data-error="wrong" data-success="right" style="display: none;">As senhas não coincidem</span>
                </div>
            </div>
            <div class="card-action">
                <button class="btn waves-effect waves-light" type="submit" id="send-information">Enviar
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    var password = $("[name='password']")
        , confirm_password = $("[name='password-confirmation']")
        , send_information = $("#send-information")
        , helper_text = $("#helper-text");

    function validatePassword() {
        if(password.val() != confirm_password.val()) {
            helper_text.show();
            send_information.prop('disabled', true)
        } else {
            helper_text.hide();
            send_information.prop('disabled', false);
        }
    }

    password.change(validatePassword);
    confirm_password.keyup(validatePassword);
    
</script>